<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>System - GalleryChamp</name>
	<author>Joomlachamp.com</author>
	<creationDate>September, 2012</creationDate>
	<copyright>Copyright (c) 2012 - 2013 Redpanda.gr. All rights reserved.</copyright>
	<authorEmail>info@joomlachamp.com</authorEmail>
	<authorUrl>www.joomlachamp.com</authorUrl>
	<version>1.2.8</version>
	<license>GPLv2 or later - Commercial</license>
	<description>Thank you for choosing gallerychamp. Keep in mind that both plugins need to be installed and enabled in order to work properly. For any questions or suggestions don't hesitate to visit us on joomlachamp.com or contact us on gallerychamp@joomlachamp.com</description>
	<files>
		<filename plugin="gallerychamp">gallerychamp.php</filename>
		<folder>css</folder>
		<folder>js</folder>
		<folder>templates</folder>
		<folder>images</folder>
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB.plg_system_gallerychamp.ini</language>
	</languages>
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="set_table" type="hidden"
					description="set table"
					label="set table"
					default="0"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
